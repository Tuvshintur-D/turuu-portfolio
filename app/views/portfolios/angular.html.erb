<h1>Angular Portfolio Items</h1>

<%= link_to "create new portfolio", new_portfolio_path %>
<% @angular_pi.each do |item| %>

<h2><%= link_to item.title, portfolio_path(item.id) %> </h2>
<p><%= item.subtitle %> </p>
<p><%= item.body %> </p>


<%= image_tag item.thum_image unless item.thum_image.nil? %>
<%= link_to "Edit", edit_portfolio_path(item) %>
<%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>	